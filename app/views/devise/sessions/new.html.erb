<div class="text-center">
<h2 class="mt-5 my-4">Por favor inicia sesión</h2>

<%= form_for(resource, as: resource_name, :class => 'form-signin', url: session_path(resource_name)) do |f| %>
  <div>
    <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email", :class => 'form-control form-signin-pass', :placeholder => 'Correo electrónico' %>
  </div>

  <div>
    <%= f.password_field :password, autocomplete: "off", :class => 'form-control form-signin-email', :placeholder => 'Introduce tu contraseña'  %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="checkbox mb-3"">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'Recuérdame' %>
    </div>
  <% end -%>

  <div class='text-center'>
    <%= f.submit 'Iniciar sesión', :class => 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
